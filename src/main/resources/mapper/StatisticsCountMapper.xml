<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sea.dao.StatisticsCountDao"> <!--mapper文件，用于编写一些特殊的SQL需求-->
    <resultMap id="BaseResultMap" type="com.sea.model.vo.StatisticsCountVO">
        <result column="article_count" property="articleCount" jdbcType="INTEGER" />
        <result column="category_count" property="categoryCount" jdbcType="INTEGER" />
        <result column="user_count" property="userCount" jdbcType="INTEGER" />
        <result column="tag_count" property="tagCount" jdbcType="INTEGER" />
    </resultMap>

    <select id="getCount" resultMap="BaseResultMap">
        SELECT
                (SELECT COUNT(*) FROM tb_article) AS article_count,
                (SELECT COUNT(*) FROM tb_category) AS category_count,
                (SELECT COUNT(*) FROM tb_user) AS user_count,
                (SELECT COUNT(*) FROM tb_tag) AS tag_count

    </select>
</mapper>